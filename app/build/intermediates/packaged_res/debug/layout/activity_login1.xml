<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginimg"
    tools:context=".loginActivity1">

    <Button
        android:id="@+id/btnAdmin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="137dp"
        android:layout_height="61dp"
        android:layout_marginStart="31dp"
        android:capitalize="characters"
        android:text="ADMIN"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFCB0F"
        app:backgroundTint="#D0002F8E"
        app:iconTint="#A9C120"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnTenant"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTenant"
        android:layout_width="129dp"
        android:layout_height="63dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="189dp"
        android:text="tenant"
        app:backgroundTint="#EEEA1818"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtlogin1"
        android:layout_width="270dp"
        android:layout_height="105dp"
        android:layout_marginTop="244dp"
        android:gravity="center"
        android:text="Choose type of account"
        android:textColor="#F44336"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>