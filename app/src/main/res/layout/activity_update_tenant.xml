<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateTenantActivity">


    <EditText
        android:id="@+id/medtName"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/medtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/medtEmail"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/medtPhoneNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medtName" />

    <EditText
        android:id="@+id/medtPhoneNo"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Enter Phone No"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/medtIdNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medtEmail" />

    <EditText
        android:id="@+id/medtAddress"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/mbtnTenantupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medtIdNo" />

    <EditText
        android:id="@+id/medtIdNo"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Enter ID Number"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/medtAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medtPhoneNo" />

    <Button
        android:id="@+id/mbtnTenantupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="324dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/medtAddress"
        app:layout_constraintTop_toBottomOf="@+id/medtAddress" />

</androidx.constraintlayout.widget.ConstraintLayout>