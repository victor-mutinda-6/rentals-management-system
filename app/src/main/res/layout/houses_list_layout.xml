<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/houseNumber"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/houseNumber"
                android:id="@+id/houseType"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/houseType"
                android:id="@+id/houseRent"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/houseTenant"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/houseRent"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/moreInfor"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/houseTenant"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/editHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/listicon" />

        <ImageView
            android:id="@+id/deleteHouse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/listicon" />
    </LinearLayout>
</androidx.cardview.widget.CardView>