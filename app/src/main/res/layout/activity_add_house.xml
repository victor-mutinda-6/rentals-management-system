<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    tools:context=".AddHouseActivity">

    <EditText
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/enterNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="189dp"
        android:layout_marginBottom="14dp"
        android:background="#D8FFFFFF"
        android:hint="Enter House Number"
        android:inputType="number"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/enterType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/enterType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="#D8FFFFFF"
        android:hint="Enter House Type"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/enterRent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterNumber" />

    <EditText
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/enterMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:background="#D8FFFFFF"
        android:hint="Enter More Information"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/mbtnView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterTenant" />

    <EditText
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:id="@+id/enterTenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#D8FFFFFF"
        android:hint="Enter Tenant"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/enterMore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterRent" />

    <EditText
        android:id="@+id/enterRent"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="#D8FFFFFF"
        android:hint="Enter Rent"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/enterTenant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterType" />

    <Button
        android:id="@+id/mbtnSave"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#DDFF0000"
        android:text="save"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/mbtnView"
        app:layout_constraintEnd_toStartOf="@+id/mbtnView"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mbtnView"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="210dp"
        android:backgroundTint="@color/black"
        android:text="view"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mbtnSave"
        app:layout_constraintTop_toBottomOf="@+id/enterMore" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="242dp"
        android:layout_height="161dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/houselogo" />

</androidx.constraintlayout.widget.ConstraintLayout>